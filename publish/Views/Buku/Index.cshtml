
@{
    ViewBag.Title = "Index";
}

@Html.Hidden("hf")
<script src="~/Scripts/js/buku.js"></script>

@{if (User.IsInRole("Admin"))
    {
        <div class="row">
            <div class="action-button">
                <button class="btn btn-success btn-sm btn-responsive" onclick="addData()"><i class="oi-input oi-plus"></i>Add</button>
                <button class="btn btn-primary btn-sm btn-responsive" onclick="editData()"><i class="oi-input oi-pencil"></i>Edit</button>
                <button class="btn btn-danger btn-sm btn-responsive" onclick="deleteData()"><i class="oi-input oi-trash"></i>Delete</button>
            </div>
        </div>
    }
}

<br>
<div class="row">
    <table id="tblBuku" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Harga Satuan</th>
            </tr>
        </thead>
    </table>
</div>

<div id="modalBuku" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div id="modalDialogBuku" class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitleBuku"></h5>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="BukuForm" name="Buku" action="#">
                    <div class="form-input">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Nama <font class="f-red">*</font></label>
                            <div class="col-sm-9">
                                <input id="txtName" class="form-control form-control-sm" placeholder="Please fill Name" required="" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Harga Buku <font class="f-red">*</font></label>
                            <div class="col-sm-9">
                                <input id="txtHarga" class="form-control form-control-sm" placeholder="Please fill harga" required="" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-dark btn-sm btn-responsive btnSave" type="submit"><i class="oi-input oi-circle-check"></i>Save</button>
                        <button class="btn btn-danger btn-sm btn-responsive" data-dismiss="modal"><i class="oi-input oi-circle-x"></i>Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>