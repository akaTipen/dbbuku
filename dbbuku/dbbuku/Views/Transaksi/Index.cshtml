
@{
    ViewBag.Title = "Index";
}

@Html.Hidden("hf")
<script src="~/Scripts/js/transaksi.js"></script>

<div class="row">
    <table id="tblTransaksi" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Buku</th>
                <th>Jumlah</th>
                <th>Total</th>
            </tr>
        </thead>
    </table>
</div>

<br />
<br />
<div class="row">
    <div class="col-sm-6">
        <form id="TansaksiForm" name="Transaksi" action="#">
            <div class="form-input">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Pilih Buku <font class="f-red">*</font></label>
                    <div class="col-sm-9">
                        <select id="ddlBuku" class="form-control form-control-sm" style="width: 100%" required=""></select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Jumlah <font class="f-red">*</font></label>
                    <div class="col-sm-9">
                        <input id="txtJumlah" class="form-control form-control-sm" placeholder="Please fill Jumlah" required="" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-dark btn-sm btn-responsive btnSave" type="submit"><i class="oi-input oi-circle-check"></i>Save</button>
                <button class="btn btn-danger btn-sm btn-responsive" data-dismiss="modal"><i class="oi-input oi-circle-x"></i>Cancel</button>
            </div>
        </form>
    </div>
    
</div>